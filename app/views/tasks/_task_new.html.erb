<%= form_for(@task) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :name, placeholder: "Task name..." %>
    <%= f.hidden_field :subject_id, :value => @subject.id %>
  </div>
  <%= f.submit "Add new task", class: "btn btn-primary" %>
<% end %>
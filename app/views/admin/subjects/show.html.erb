<% provide(:title, @subject.name) %>
<%= link_to "< List of subjects", admin_subjects_path, class: "btn btn-primary" %>
<div class="row">
  <aside class="col-md-4">
    <section class="subject_info">
      <h1>
        <span>
          Subject: <%= @subject.name %>
          <%= link_to "Edit", edit_admin_subject_path(@subject), class: "pull-right" %>
        </span>
      </h1>
      <pre><%= @subject.instruction %></pre>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @subject.tasks.any? %>
      <h3>Tasks (<%= @subject.tasks.count %>)</h3>
      <ol>
        <% @subject.tasks.each do |task| %>
          <li>
          Task : <%= task.name %>
          </li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>